                   Margin="15,25,15,15">
            <TextBlock.Inlines>
                    <Run x:Uid="AppVersionText"/>
                <Run Text="{Binding Path=ApplicationVersion, Mode=OneWay}" />
            </TextBlock.Inlines>
        </TextBlock>-->
    </Grid>
    </ScrollViewer>
    </Grid>
</Page>