<UserControl x:Class="LitRes.Controls.PageHeader"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	FontFamily="{StaticResource PhoneFontFamilyLight}"
	FontSize="{StaticResource PhoneFontSizeNormal}"
	Foreground="{StaticResource PhoneForegroundBrush}"
	d:DesignHeight="24" >

	<StackPanel Name="LayoutRoot" HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <StackPanel Name="networkAvailability" Background="White" Opacity="1" Visibility="Collapsed">
        </StackPanel>
		<ProgressBar x:Name="loadingProgress" Margin="24,2,24,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Foreground="{StaticResource LitResAccentBrush}" />
	</StackPanel>
</UserControl>
